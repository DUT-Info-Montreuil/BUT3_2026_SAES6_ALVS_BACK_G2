# .env.example - Template de configuration
# Copier ce fichier vers .env et remplir les valeurs

# ================================
# Flask
# ================================
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# ================================
# PostgreSQL
# ================================
POSTGRES_USER=alvs_user
POSTGRES_PASSWORD=alvs_secret_password
POSTGRES_DB=alvs_db
DATABASE_URL=postgresql://alvs_user:alvs_secret_password@db:5432/alvs_db

# ================================
# Redis
# ================================
REDIS_URL=redis://redis:6379/0

# ================================
# JWT
# ================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# ================================
# File Upload
# ================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads

# ================================
# Celery
# ================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
